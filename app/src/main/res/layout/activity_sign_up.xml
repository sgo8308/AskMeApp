<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="131dp"
        android:layout_height="37dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/title_font"
        android:text="질문 받습니다"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_passWord"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/search_customize"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="13dp"
        android:hint="6자 이상 입력해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/editText_passWord2"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_customize"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="13dp"
        android:hint="한 번 더 입력해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord" />

    <Button
        android:id="@+id/button_signUp"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="220dp"
        android:background="#E1DDDD"
        android:text="회원 가입"
        android:textColor="#FFB1AEAE"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editText_passWord2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_passWord2"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord2" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="비밀번호"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_passWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="5dp"
                android:text="이메일"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_marginLeft="98dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="215dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/search_customize" />

                <EditText
                    android:id="@+id/editText_id"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:ems="10"
                    android:hint="이메일을 입력해주세요"
                    android:inputType="textPersonName"
                    android:paddingLeft="13dp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/image_idCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="7dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_check_circle_24" />
            </FrameLayout>

            <Button
                android:id="@+id/button_certification"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#E1DDDD"
                android:text="인증"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout_certification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="215dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="98dp"
                android:src="@drawable/search_customize" />

            <EditText
                android:id="@+id/editText_certificationNumber"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="98dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="13dp" />

            <Button
                android:id="@+id/button_certification2"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="44dp"
                android:background="#E1DDDD"
                android:text="인증"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="8dp"
                android:text="7:00" />
        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_passWordCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/editText_passWord"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <ImageView
        android:id="@+id/image_passWordConfirmCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/editText_passWord2"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <TextView
        android:id="@+id/editText_passWord3"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/search_customize"
        android:paddingLeft="18dp"
        android:text="모두 동의합니다."
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord2" />

    <CheckBox
        android:id="@+id/checkBox_agreePersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_agreeServiceUseMnual" />

    <CheckBox
        android:id="@+id/checkBox_agreeServiceUseMnual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_imAbove14" />

    <CheckBox
        android:id="@+id/checkBox_imAbove14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_agreeAll" />

    <CheckBox
        android:id="@+id/checkBox_agreeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="만 14세 이상입니다.(필수)"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_passWord3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="에 동의합니다.(필수)"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/button_agreeServiceUseMnual"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="에 동의합니다.(필수)"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/button_agreePersonalInfo"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/button_agreeServiceUseMnual"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:background="@null"
        android:stateListAnimator="@null"
        android:text="서비스 이용약관"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_agreePersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:background="@null"
        android:stateListAnimator="@null"
        android:text="개인정보 수집,이용"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>